<div class="container col-md-6 m-auto mt-5">
    <%= message.join(', ') %>
        <h1 class="text-center">Crear Usuario</h1>
        <form class="d-flex flex-column" action="/signup" method="post">
            <div class="">
                <label for="nombre" class="form-label my-2">Nombre de Usuario</label>
                <input type="text" class="form-control" id="nombre"  name="username" required>                
            </div>
            <div class="">
                <label for="email" class="form-label my-2">Email</label>
                <input type="email" class="form-control" id="email"  name="email">                
            </div>
            <div class="">
                <label for="password" class="form-label my-2">Password</label>
                <input type="password" class="form-control" id="password"  name="password">                
            </div>
            <div class="row py-4 px-2">
                <button class="btn btn-success w-full" type="submit">Crear Usuario</button>
            </div>
        </form>
    </div>